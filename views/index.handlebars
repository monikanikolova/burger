<div class="container">
	<div class="row">
		<div class="center col-sm-12">
			<h1>Eat-Da-Burger</h1>
			<hr>
			<img src="assets/img/burger.png" alt="Eat-Da-Burger">
		</div>
	</div>
	<div class="container" id="burgers-view">
		<div class="row" >
			<div class="col-sm-6">
				<h2>Available Burgers</h2>
				<ul style="list-style-type:none;">
					{{#each burgers}}
					{{#unless this.devoured}}
					<li>
						{{this.burger_name}}
						<form action="/api/burgers/{{this.id}}" method="POST">
							<input type="hidden" name="devoured" value="true">
							<button class="btn-warning" type="submit">Devour It!</button>
						</form>

					</li>
					{{/unless}}
					{{/each}}
				</ul>

			</div>

			<div class="col-sm-6">

				<h2>Gone Burgers!</h2>
				<ul style="list-style-type:none;">
					{{#each burgers}}
					{{#if this.devoured}}
					<li>
						{{this.burger_name}}

					</li>
					{{/if}}
					{{/each}}
				</ul>
			</div>
	<hr>
		</div>

		<div class="row">
			<div class="center col-sm-12" id="add-burger">
			<br>
			<br>
				<h2>Add A Burger!</h2>

				<form class="create-form" action="/" method="POST">

					<div class="form-group">
						<p>What burger would you like today?</p>
						<input type="text" id="ca" name="burger_name">
					</div>

					<button class="btn-warning" type="submit" id="create-form">Add Burger</button>
				</form>

			</div>

		</div>
	</div>
</div>
